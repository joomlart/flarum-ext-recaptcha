{
    "name": "joom/flarum-ext-recaptcha",
    "description": "Google reCAPTCHA for flarum",
    "type": "flarum-extension",
    "keywords": ["captcha", "validate", "verify"],
    "license": "MIT",
    "authors": [
        {
            "name": "Khanh Le",
            "email": "khanhlh@gmail.com"
        }
    ],
    "support": {
        "issues": "https://github.com/joomlart/flarum-ext-recaptcha/issues",
        "source": "https://github.com/joomlart/flarum-ext-recaptcha"
    },
    "require": {
        "flarum/core": "^0.1.0-beta.5",
        "google/recaptcha": "~1.1"
    },
    "autoload": {
        "psr-4": {
            "Joom\\ReCaptcha\\": "src/"
        }
    },
    "extra": {
        "flarum-extension": {
            "title": "Google reCAPTCHA",
            "icon": {
                "image": "icon.svg",
                "backgroundColor": "#fff",
                "backgroundSize": "contain",
                "backgroundPosition": "center",
                "backgroundRepeat": "no-repeat"
            }
        }
    }
}
